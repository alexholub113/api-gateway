{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ServiceRouting": {
    "Routes": [
      {
        "Id": "weather-route",
        "Path": "/api/weather/*",
        "Methods": [ "GET" ],
        "TargetService": "weather-service",
        "AuthPolicy": null,
        "RateLimitPolicy": "standard",
        "CachePolicy": "short-term",
        "LoadBalancingStrategy": "RoundRobin",
        "Timeout": "00:00:30"
      },
      {
        "Id": "users-route",
        "Path": "/api/users/*",
        "Methods": [ "GET", "POST", "PUT", "DELETE" ],
        "TargetService": "user-service",
        "AuthPolicy": "RequireAuth",
        "RateLimitPolicy": "strict",
        "CachePolicy": null,
        "LoadBalancingStrategy": "WeightedRoundRobin",
        "Timeout": "00:00:15"
      }
    ]
  },
  "Services": {
    "Services": [
      {
        "Name": "weather-service",
        "Instances": [
          {
            "Url": "https://api.weather.com",
            "Weight": 1,
            "IsHealthy": true
          },
          {
            "Url": "https://backup.weather.com",
            "Weight": 1,
            "IsHealthy": true
          }
        ],
        "HealthCheck": {
          "Path": "/health",
          "Interval": "00:00:30",
          "Timeout": "00:00:05"
        }
      },
      {
        "Name": "user-service",
        "Instances": [
          {
            "Url": "https://api1.users.com",
            "Weight": 2,
            "IsHealthy": true
          },
          {
            "Url": "https://api2.users.com",
            "Weight": 1,
            "IsHealthy": true
          }
        ],
        "HealthCheck": {
          "Path": "/health",
          "Interval": "00:00:20",
          "Timeout": "00:00:03"
        }
      }
    ]
  },
  "AuthZN": {
    "ServiceUrl": "https://auth.example.com",
    "Timeout": "00:00:10",
    "HealthCheck": {
      "Path": "/health",
      "Interval": "00:00:30",
      "Timeout": "00:00:05"
    }
  }
}
